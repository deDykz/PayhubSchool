@model IEnumerable<SchoolPayhub.Models.Course>

@{
    ViewBag.Title = "Index";
}

<h2>List of All Courses</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        Find by Course Title: @Html.TextBox("searchString")
        <input type="submit" value="Search" />
    </p> 
}

<table>
    <tr>
        <th>
            @Html.ActionLink("Course Title", "Index", new { sortOrder = ViewBag.TitleSortParm})
        </th>
        <th>
            @Html.ActionLink("Credits", "Index", new { sortOrder = ViewBag.NumSortParm})
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Credits)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CourseID }) |
            @Html.ActionLink("Details", "Details", new { id=item.CourseID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CourseID })
        </td>
    </tr>
}

</table>
